##
# Kozo configuration
#
kozo do
  backend "local"
end

##
# Providers
#
provider "hcloud" do |p|
  p.key = ENV.fetch("HCLOUD_TOKEN") # Kozo automatically loads `.env`
end

##
# Services
#
resource "hcloud_ssh_key", "default" do |s|
  s.name = "default"
  s.public_key = "hcloud_public_key"
end

resource "hcloud_ssh_key", "alternative" do |s|
  s.name = "alternative"
  s.public_key = "hcloud_public_key"
end
